<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Contaner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="AppTheme.BottomBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:background">@drawable/gradient_background</item>
        <item name="itemIconTint">@color/colorText</item>
        <item name="itemTextColor">@color/colorText</item>
    </style>

    <style name="AppTheme.ToolBar">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_toolbar</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="AppTheme.ToolBarText">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">@font/titillium</item>
    </style>

    <style name="AppTheme.FloatingButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/colorText</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CardView">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.Label">
        <item name="fontFamily">@font/titillium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text">
        <item name="fontFamily">@font/titillium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Button">
        <item name="fontFamily">@font/titillium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AppTheme.TextArea">
        <item name="fontFamily">@font/titillium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment" >center</item>
        <item name="android:fontFamily" >@font/cairo</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textAppearance">@style/AppTheme.DialogText</item>
        <item name="android:buttonBarButtonStyle">@style/AppTheme.DialogButtons</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.DialogText" >
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/titillium</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.DialogButtons" >
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/titillium</item>
    </style>



</resources>
